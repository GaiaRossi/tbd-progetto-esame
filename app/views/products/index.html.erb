<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <table class="table">
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.name %>
        </td>

        <td>
          <%= product.description %>
        </td>

        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to "Show this product", product %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New product", new_product_path %>
