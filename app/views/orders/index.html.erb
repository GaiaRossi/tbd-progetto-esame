<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<div id="orders">
  <table class="table">
    <tr>
      <th>Order id</th>
      <th>Order date</th>
      <th>User</th>
      <th>Products</th>
      <th>Action</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.id %>
        </td>
        <td>
          <%= order.date %>
        </td>

        <td>
          <%= order.user.username %>
        </td>

        <td>
          <ul>
            <% order.order_row.each do |order_row| %>
              <li><%= order_row.product.name %></li>
            <% end %>
          </ul> 
        </td>

        <td>
          <%= link_to "Show this order", order %>
        </td>
      </tr>
      
    <% end %>
    </table>
</div>

<%= link_to "New order", new_order_path %>
