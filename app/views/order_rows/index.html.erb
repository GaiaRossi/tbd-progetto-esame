<p style="color: green"><%= notice %></p>

<h1>Order rows</h1>

<%= link_to "New order row", new_order_row_path %> |
<%= link_to "Back to orders", orders_path %>

<div id="order_rows">
  <table class="table">
    <tr>
      <th>Order id</th>
      <th>Username</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Action</th>
    </tr>
    <% @order_rows.each do |order_row| %>
      <tr>
      <td>
        <%= order_row.order_id %>
      </td>
    
      <td>
        <%= order_row.order.user.username %>
      </td>
    
      <td>
        <%= order_row.product.name %>
      </td>
    
      <td>
        <%= order_row.quantity %>
      </td>
    
      <td>
        <%= link_to "Show this order row", order_row %>
      </td>
      </tr>
    <% end %>
  </table>
</div>


